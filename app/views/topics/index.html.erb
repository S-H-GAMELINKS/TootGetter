<p id="notice"><%= notice %></p>

<h1>Topics</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>About</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @topics.each do |topic| %>
      <tr>
        <td><%= topic.title %></td>
        <td><%= topic.about %></td>
        <td><%= User.find(topic.user_id).uid %></td>
        <td><%= link_to 'Show', topic %></td>
        <% if user_signed_in? && current_user.id == topic.user_id %>
        <td><%= link_to 'Edit', edit_topic_path(topic) %></td>
        <td><%= link_to 'Destroy', topic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
  <%= link_to 'New Topic', new_topic_path %>
<% else %>
  <%= link_to 'Login For Mastodon', user_mastodon_omniauth_authorize_path %>
<% end %>